#include "main.h"

/*
* print_o - print octal of an int
* @val: value to be converted
* Return: converted value
*/

int print_o(va_list val)
{
    int j, count = 0;
    int *arr;
    unsigned int number = va_arg(val, unsigned int);
    unsigned int temp = number;

    while (number / 8 != 0)
    {
        number = number / 8;
        count++;
    }
    count++;

    arr = malloc(sizeof(int) * count);

    for (j = 0; j < count; j++)
    {
        arr[j] = temp % 8;
        temp = temp / 8;
    }
    for (j = count - 1; j >= 0; j--)
        _putchar(arr[j] + '0');
        free(arr);
    return (count);
}
